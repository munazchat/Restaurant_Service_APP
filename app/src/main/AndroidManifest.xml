<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ca.gbc.comp3074.personalrestaurantguide">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.AddOrEditRestaurantActivity"
            android:parentActivityName=".activity.AdminActivity" />
        <activity
            android:name=".activity.AdminActivity"
            android:parentActivityName=".activity.RestaurantListActivity" />
        <activity
            android:name=".activity.SearchActivity"
            android:parentActivityName=".activity.RestaurantListActivity" />
        <activity
            android:name=".activity.RestaurantActivity"
            android:parentActivityName=".activity.RestaurantListActivity" />
        <activity android:name=".activity.RestaurantListActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>